<div class="container mt-5">
  <h2 class="mb-4"><%= @tweet.new_record? ? "Nuevo Tweet" : "Editar Tweet" %></h2>

  <%= form_with(model: @tweet, local: true, class: "shadow-sm p-4 rounded bg-light") do |form| %>
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Escribe tu tweet aquÃ­..." %>
    </div>

    <div class="mb-3">
      <%= form.label :username, class: "form-label" %>
      <%= form.text_field :username, class: "form-control", placeholder: "Nombre de usuario" %>
    </div>

    <%= form.submit @tweet.new_record? ? "Crear Tweet" : "Actualizar Tweet", class: "btn btn-primary" %>
  <% end %>
</div>
