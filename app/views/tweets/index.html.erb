<h1>Tweets</h1>

<%= form_with url: tweets_path, method: :get, local: true do %>
  <%= label_tag :search, "Buscar Tweets:" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Buscar" %>
<% end %>

<%= link_to 'Nuevo Tweet', new_tweet_path %>

<% @tweets.each do |tweet| %>
  <p><strong><%= tweet.username %></strong>: <%= tweet.description %></p>
  <%= link_to 'Editar', edit_tweet_path(tweet) %> |
  <%= link_to 'Eliminar', tweet, method: :delete, data: { confirm: '¿Estás seguro?' } %>
<% end %>

<%= paginate @tweets %>
